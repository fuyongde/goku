<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

  <include resource="org/springframework/boot/logging/logback/base.xml"/>

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-20(%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread]) %-5level [%X{hydraTraceId}] %logger{80}.%M:%line-%msg%n</pattern>
    </encoder>
  </appender>

  <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/opt/logs/letou/letou-leaf/letou-leaf.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <FileNamePattern>/opt/logs/letou/letou-leaf/letou-leaf.%d{yyyy-MM-dd}.log</FileNamePattern>
    </rollingPolicy>
    <encoder>
      <pattern>%-20(%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread]) %-5level [%X{hydraTraceId}] %logger{80}.%M:%line-%msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.dafy.letou.leaf" level="DEBUG"/>
  <logger name="com.alibaba.dubbo" level="ERROR"/>

  <root level="INFO">
    <appender-ref ref="file"/>
  </root>

</configuration>

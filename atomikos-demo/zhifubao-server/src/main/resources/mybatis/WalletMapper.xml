<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunflower.goku.zhifubao.repository.WalletMapper">

    <resultMap id="WalletMap" type="com.sunflower.goku.zhifubao.entity.Wallet">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="balance" property="balance" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        `id`, `user_id`, `balance`
    </sql>

    <select id="getByUserId" resultMap="WalletMap">
        SELECT * FROM `wallet` w
        <where>
            w.`user_id` = #{userId}
        </where>
    </select>

    <select id="getByUserId4Update" resultMap="WalletMap">
        SELECT * FROM `wallet` w
        <where>
            w.`user_id` = #{userId}
        </where>
        FOR UPDATE
    </select>

    <update id="tradeOut">
        UPDATE `wallet` w
        <set>
            w.`balance` = w.`balance` - #{amount}
        </set>
        <where>
            w.`user_id` = #{userId}
        </where>
    </update>

</mapper>